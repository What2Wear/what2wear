<%- layout('layout') %>

<div class="page-header">
    <h3>Contact Form</h3>
    <form class="form form-horizontal" role="form" method="POST">
        <input type="hidden" name="_csrf" value="<%= token %>">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">Name</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="name" id="name" autofocus="true">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="email">Email</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="email" id="email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="message">Body</label>
            <div class="col-sm-8">
                <textarea class="form-control" type="text" name="message" id="message" rows="7"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <button class="btn btn-default" type="submit">
                    <i class="fa fa-mail-forward"></i>
                    Send
                </button>
            </div>
        </div>
    </form>
</div>
