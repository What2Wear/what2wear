<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" style="-fx-background-image: url('back.png');" xmlns="http://javafx.com/javafx/null"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <bottom>
        <HBox alignment="BASELINE_LEFT" opacity="0.75" prefHeight="19.0" prefWidth="600.0"
              style="-fx-background-color: #FFFFFF" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lbStatus" text="Log in" textAlignment="CENTER"/>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <left>
        <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <Region prefHeight="200.0" prefWidth="200.0" style="-fx-background-image: url('@../sample/back.png');"
                BorderPane.alignment="CENTER"/>
    </right>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Region prefHeight="44.0" prefWidth="200.0"/>
                <VBox alignment="CENTER" opacity="0.85" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                      style="-fx-background-color: #FFFFFF;">
                    <children>
                        <ImageView fitHeight="181.0" fitWidth="251.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../sample/logo.png"/>
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" rotate="-5.0"
                               text="Welcome to What2Wear" textAlignment="CENTER" textOverrun="CLIP"
                               VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="tfName" promptText="Email/Phone">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </padding>
                        </TextField>
                        <PasswordField fx:id="tfPw" promptText="Password">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </padding>
                        </PasswordField>
                        <Button fx:id="btnSubmit" mnemonicParsing="false" onAction="#login" text="Submit"
                                textAlignment="CENTER">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
